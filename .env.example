# General
ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=development

# Docker images
DATAPROCESSOR_IMAGE=superapp/dataprocessor:latest
NOTIFICATIONSERVICE_IMAGE=superapp/notificationservice:latest
GRAPHQLAPI_IMAGE=superapp/graphqlapi:latest
NESTJS_IMAGE=superapp/nestjs:latest
FRONTEND_IMAGE=superapp/frontend:latest
WEAKAPP_IMAGE=superapp/weakapp:latest

# Frontend Configuration
FRONTEND_BASE_URL=http://localhost
FRONTEND_GRAPHQL_PATH=/graphql
FRONTEND_SIGNALR_PATH=/notifications/notificationHub

# WeakApp
WEAKAPP_CONTAINER_NAME=weakapp
WEAKAPP_PORT=8080

# Postgres
POSTGRES_CONTAINER_NAME=postgres
POSTGRES_USER=appuser
POSTGRES_PASSWORD=apppassword
POSTGRES_DB=appdb
POSTGRES_PORT=5432

# RabbitMQ
RABBITMQ_CONTAINER_NAME=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
RABBITMQ_DEFAULT_VHOST=/
RABBITMQ_DATA_QUEUE=data_queue
RABBITMQ_NOTIFICATION_QUEUE=notification_queue

# Licenses
MEDIATR_LICENSE_KEY=your_mediatr_license_key_here

# Nginx Configuration
# Set to 'production' for SSL/HTTPS or 'development' for HTTP only
NGINX_ENVIRONMENT=development
NGINX_HTTPS_PORT=443
NGINX_HTTP_PORT=80

# SSL Configuration (required only for NGINX_ENVIRONMENT=production)
DOMAIN=example.com
SSL_CERTIFICATE_PATH=/path/to/your/certificate.pem
SSL_CERTIFICATE_KEY_PATH=/path/to/your/private-key.pem